@model List<SurveyResponse>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geçmiş Anket Oylamaları</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #4CAF50;
            margin-bottom: 30px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        ul {
            padding: 0;
            margin: 0;
            list-style-type: none;
        }

        li {
            background-color: #f9f9f9;
            padding: 8px;
            margin: 4px 0;
            border-radius: 4px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        }

        li:nth-child(even) {
            background-color: #e9e9e9;
        }

        li:hover {
            background-color: #d3ffd3;
        }
    </style>
</head>
<body>
    <h1>Geçmiş Anket Oylamaları</h1>
    <table>
        <thead>
            <tr>
                <th>Survey ID</th>
                <th>Username</th>
                <th>Answers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var response in Model)
            {
                <tr>
                    <td>@response.SurveyId</td>
                    <td>@response.Username</td>
                    <td>
                        <ul>
                            @foreach (var answer in response.Answers)
                            {
                                <li>@answer</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
